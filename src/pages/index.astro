---
import Navbar from "@/components/navbar/Navbar.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import LinkCard from "./_components/LinkCard.astro";
---

<BaseLayout title="Home" description="Welcome to wisteriatp.work">
    <section class="vh-100 position-relative">
        <h1 class="title">Welcome to wisteriatp.work</h1>
    </section>
    <Navbar stickyTop={false} />
    <div class="container mt-4 min-vh-100">
        <section>
            <div class="row">
                <LinkCard
                    title="Social Links"
                    description="SNSアカウントへのリンクはこちらからご覧いただけます。"
                    url="/socials"
                    buttonText="Socialsへ移動"
                />
                <LinkCard
                    title="Blog"
                    description="ブログ記事はこちらからご覧いただけます。"
                    url="/blog"
                    buttonText="Blogへ移動"
                />
            </div>
        </section>
    </div>
</BaseLayout>

<style>
    .title {
        position: relative;
        overflow: hidden;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        width: 100%;
        padding-bottom: 0.2em;
    }

    .title::after {
        content: "";
        display: block;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 4px;
        background: #74b020;
        transform-origin: left;
        animation-name: underline-appear;
        animation-duration: 3s;
        animation-timing-function: cubic-bezier(0.77, 0, 0.175, 1);
    }

    @keyframes underline-appear {
        0% {
            transform: scaleX(0);
        }
        25% {
            transform: scaleX(0);
        }
        100% {
            transform: scaleX(1);
        }
    }
</style>
